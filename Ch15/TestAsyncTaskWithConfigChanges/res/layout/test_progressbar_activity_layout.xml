<?xml version="1.0" encoding="utf-8"?>
<!-- 
*********************************************
* test_progressbar_activity_layout.xml
* prefix: tpb_
*
* Show how an asynctask can interact with a 
* Controls: 
* 	A progress bar
* 	followed by a text view
*
* Activity: TestProgressBarDriverActivity.java
* 
*********************************************
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/MainLayoutId"
    >

<ProgressBar
    android:id="@+id/tpb_progressBar1"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:indeterminate="false"
    android:visibility="gone"
    />   
<TextView  
	android:id="@+id/tpb_text1"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Touch Menu to Test the Progress Bar. Or Go Back to the Previous Activity" android:layout_marginTop="10dp"
    android:background="@drawable/shape_5"
    />
</LinearLayout>
